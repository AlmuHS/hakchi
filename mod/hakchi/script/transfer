source "$modpath/script/backup"
source "$modpath/script/install"
source "$modpath/script/package"
source "$modpath/script/games"

backup_nandc
mount_base
backup

[ -f "$preinitpath/p0000_config" ] && source "$preinitpath/p0000_config"

if [ -f "$preinit" ]; then
  echo $modname already installed
  mod_repair
else
  mod_install
fi

modspath=$modpath/transfer
packs_uninstall "$modspath/uninstall"
packs_uninstall "$modspath/hmod/uninstall"
packs_install "$modspath"
packs_install "$modspath/hmod"
rm -rf $modspath/hmod
transfer_games "$modspath/games"
transfer_path "$transferpath"

# Uploaded via transport pffff_config has higher priority
[ -f "$preinitpath/p0000_config" ] && source "$preinitpath/p0000_config"
source "$preinitpath/pffff_config"
